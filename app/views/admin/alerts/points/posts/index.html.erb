<div class="table-responsive">
  <table class="table table-condensed table__admin">
    <thead>
      <tr>
        <th><%= link_to_sort "ID", :sort => :id %></th>
        <th><%= link_to_sort "Entity", :sort => :entity  %></th>
        <th><%= link_to_sort "Content", :sort => :content %></th>
        <th><%= link_to_sort "Type", :sort => :type  %></th>
        <th><%= link_to_sort "Points", :sort => :total_points  %></th>
        <th><%= link_to_sort "Top Voter", :sort => :top_voter  %></th>
        <th><%= link_to_sort "Top Voter Points", :sort => :top_voter_points  %></th>
        <th><%= link_to_sort "Date", :sort => :created_at  %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <%= content_tag :tr, highlight_row_post(post) do %>
          <td><%= post.id %></td>
          <td><%= link_to(post.entity.name, [:admin, post.entity])  %>

            <%="(#{post.entity.class.name[0]})" %></td>
          <td style="max-width: 400px"><%= post.content%></td>
          <td><%= post.type %></td>

          <td><%= post.total_points %></td>
          <td><%= post.top_voter.name %></td>
          <td><%= post.top_voter_points %></td>

          <td><%= post.created_at.to_formatted_s(:short)  %></td>

          <td><%= button_to 'Delete', [:admin, post], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

