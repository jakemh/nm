<div class="table-responsive">
  <table class="table table-condensed table__admin">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Name</th>
        <th>Date</th>
        <th>Businesses</th>
        <th>Connections</th>
        <th>Photo</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.created_at.to_formatted_s(:short)  %></td>
          <td><%=   %></td>
          <td><%=   %></td>
          <td><%= thumb(user, class: "thumb-small")%></td>
          <td><%= button_to 'Delete', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>