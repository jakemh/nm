    <% end %>`
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
          <div class="logo__temp logo__temp--left">
            <%= image_tag 'logo_nm.png' %>
          </div>
        </div>
        <div class="col-sm-10">
          <div class="text__temp">
            Military Veterans make great entrepreneurs
          </div>
        </div>
      </div>
    </div>
 
    <div class="container-fluid">
      <div class="row">
        <%= form_for(@email, :html => {:class => 'form__temp'}) do |f| %>
          <div class="email-input-container__temp">
            <div class="input-group input-group__email">
              <%= f.text_field :email, :class => "input__email", 
          :type => "email",
          :placeholder => "EMAIL"
        %>
              <span class="input-group-btn input-group-btn__email">
                <%= f.submit "SIGN UP FOR NEWS", :class => "btn btn-primary submit__email" %>
              </span>
            </div><!-- /input-group -->
          </div>
        <% end %>
      </div>
    </div>
    <a href="#info" class="nav-link">
      <div class="bottom-bar__temp">
        <%= fa_icon 'chevron-down' %>
      </div>
    </a>
  </div>
  <div id="info" class="nav-link bottom__temp">
    <div class="container-fluid container-bottom__temp">

        <% LANDING['sections'].each_with_index do |info, i| %>
          <div class="row">

            <div class="col-sm-6">
              <% if i.even? %>
                <div class="info__bottom-temp">
                  <div class="title__info-bottom-temp">
                    <%= info["title"] %>
                  </div>
                  <div class="body__info-bottom-temp">
                    <%= info["body"] %>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="col-sm-6">
              <% if i.odd? %>
                <div class="info__bottom-temp">
                  <div class="title__info-bottom-temp">
                    <%= info["title"] %>
                  </div>
                  <div class="body__info-bottom-temp">
                    <%= info["body"] %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
  
      <div class="about__temp">
        <div class="info__bottom-temp">
          <div class="title__info-bottom-temp">
            <%= LANDING["about"]["title"] %>
          </div>
          <div class="body__info-bottom-temp">
            <%= LANDING["about"]["body"] %>

          </div>
        </div>
      </div>
    </div>
    <!-- fluid-container -->
    <div class="bottom-bar__temp-bottom">
      Next Mission
    </div>
  </div>
