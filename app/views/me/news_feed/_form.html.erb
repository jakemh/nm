<% if true %>
  <%= form_for [:me, @post], :html => {
        :id => (opt[:id] || "js-post-form")
        } do |f| %>
    <div class="feed__entry-inner-main">
      <%= f.hidden_field :parent_id, :value => (opt[:parent_id] || nil ), :html => { "ng-model" => "post" } %>
      <%= f.hidden_field :type, :value => (opt[:type] || nil), :html => { "ng-model" => "post" } %>
      <%= f.text_area :content, :placeholder => "Enter a message", :rows => (opt[:rows] || 3), :class => "feed__entry-input", :html => { "ng-model" => "post" } %>
    </div>
    <div class="feed__form-bottom">
      <%= render "me/shared/entity_select" %>
      <div class="feed__form-send">
        <%= f.submit "Send", :class => "feed__button button__form ", :style => "margin-top: 0 !important" %>
      </div>
    </div>
  <% end %>
<% end %>

