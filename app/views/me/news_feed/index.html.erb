<div class="feed">
  <div class="feed__entry">
    <div class="feed__entry-inner feed__entry-inner--left">
      <%= thumb(current_user, class: "thumb"){|t| image_tag t} %>
      </div>
    <div class="feed__entry-inner feed__entry-inner--middle">
      <div class="feed__entry-inner-title js-form-name">
        <%= current_user.name %>
      </div>
      <%= form_for [current_user, @entity, @post].compact, :html => {:id => "js-post-form"} do |f| %>
        <div class="feed__entry-inner-main">

          <%= f.text_area :content, :placeholder => "Enter a message", :rows => 3, :class => "feed__entry-input" %>
        </div>
        <div class="feed__form-bottom">
          <%= select_tag :type_array, options_for_select(@select), {:class => "feed__entry-select"}%> 
          <div class="feed__form-send">
            <%= f.submit "Send", :class => "feed__button button__form ", :style => "margin-top: 0 !important" %>
          </div>
        </div>
      <% end %>
    </div>
    <!--  <div class="feed__entry-inner feed__entry-inner--right">
    

  </div> -->
  </div>
  <!-- <div class="contents__feed"> -->
  <% @posts.each do |post| %>
    <div class="feed__content">
      <div class="feed__content-title">
        <div>
          <%= thumb(post.entity, class: "thumb"){|t| image_tag t} if post.entity%>
        </div>
        <div>
          <%= follow_link(current_user, post.entity) %>
        </div>
      </div>
      <div class="feed__content-top">
        <%= "#{post.entity_name} on #{post.created_at.in_time_zone("Eastern Time (US & Canada)").strftime('%b %e, %l:%M %p') }" %>
      </div>
      <div class="feed__content-body">
        <%= post.content %>
      </div>
    </div>
  <% end %>
</div>
