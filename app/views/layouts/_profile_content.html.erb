<!-- Navigation -->
<nav class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
  <%= render 'shared/top_bar_content' %>
</nav>
<div style="height: 100%">
<%= content_tag :div, :class => ("outer__profile" if right_bar) do %>

  <div class="container__profile container__profile--left" style="overflow: auto">
    <div class="sidebar">
      <ul class="nav navbar-nav side-nav side-nav-inverse">
        <% PROFILE[side].each do |bar| %>
          <%= content_tag "li", 
          :class => active_class(send_or_nil(bar["path"], current_user)) do %>
            <%= link_to send_or_nil(bar["path"]) do %>  
            <%= bar["title"] %>
            <%= show_badge(quant_from_method(bar["badge"])) %>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>

  <% if right_bar %>
    <div class="container__profile container__profile--middle" style="overflow: auto">
      <%= yield %>
    </div>
    <div class="container__profile container__profile--right" style="overflow: auto">
      <%= yield :right_bar %>
    </div>
  <% else %>
    <div class="container__profile container__profile--full" style="overflow: auto">
      <%= yield %>
    </div>
  <% end %>

<% end %>
</div>
