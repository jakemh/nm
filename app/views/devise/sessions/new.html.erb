
  <div class="main__login">

    <% if !flash.empty? %>
      <div class="flash">
        <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
         <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
         <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
      </div>
    <% end %>
    <div>

  <%= simple_form_for(:user, :url => user_session_path,html: {class: "form__main-login"}
          ) do |f| %>
     <%= f.input :email, label: false, placeholder: "EMAIL" %>
     <%= f.input :password, autocomplete: "off", label: false, placeholder: "PASSWORD" %>
      <%= f.submit "Log in", :class=> "button__form button__form--full" %>
      <div style="font-weight: 100; width: 100%; text-align: center; margin: auto; color: white"> Don't have an account? <%= link_to "Sign up", new_user_registration_path %></div>
    <% end %>

    
    </div>
  </div>
