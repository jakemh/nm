<div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
        <div class="logo--small">
          <%= link_to root_path do %>
          <%= image_tag 'logo_nm.png' %>
          <% end %>
        </div>


    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control top__search js-top-search" placeholder="Search">
        </div>
      </form>
    
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to("#{current_user.name}", user_path) if current_user %></li>
        
       <li><%= link_to("Sign in", new_user_session_path) if !current_user%></li>
       <li><%= link_to("Sign Up", new_user_registration_path) if !current_user%></li>
        <li>  <%= link_to('Logout', destroy_user_session_path, :method => :delete) if current_user %> </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->